root = true

[*]
end_of_line = lf

[*.{js,jsx,ts,tsx,css,scss,md}]
charset = utf8
indent_style = tab
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
spaces_around_operators = true

[*.json]
charset = utf8
indent_style = tab
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
charset = utf8
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
charset = utf8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
keep_one_space_between_table_and_bracket = false
spaces_around_operators = true