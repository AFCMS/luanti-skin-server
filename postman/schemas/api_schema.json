{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0",
    "title": "Minetest Skin Server API",
    "description": "Interact with the Minetest Skin Server"
  },
  "servers": [
    {
      "url": "localhost:8080",
      "description": "Local Development server"
    },
    {
      "url": "https://skins.minetest.land",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/info": {
      "get": {
        "description": "Get info about the running server",
        "responses": {
          "200": {
            "description": "Server informations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": {
                      "description": "Version of the server",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/account/register": {
      "post": {
        "description": "Register a new account",
         "responses": {
           "200": {
             "description": "Account successfully registered"
           }
         }
      }
    },
    "/api/account/login": {
      "post": {
        "description": "Login to an account",
         "responses": {
           "200": {
             "description": "Account successfully registered"
           }
         }
      }
    },
    "/api/account/user": {
      "get": {
        "description": "Get infos for logged in account",
         "responses": {
           "200": {
             "description": "Account successfully registered"
           }
         }
      }
    },
    "/api/account/logout": {
      "post": {
        "description": "Logout of the accunt",
         "responses": {
           "200": {
             "description": "Account successfully registered"
           }
         }
      }
    },
    "/api/skin/create": {
      "post": {
        "description": "Create a new skin",
         "responses": {
           "500": {
             "description": "Internal server error"
           },
           "400": {
             "description": "Invalid request"
           },
           "200": {
             "description": "Skin created"
           }
         }
      }
    }
  }
}